<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}"/>

    <title>{% block title %}{% endblock %}{{ site_title|upper }}</title>


    {% block stylesheets %}
        {% stylesheets
        'bundles/backend/bootstrap/css/bootstrap.css'
        'bundles/backend/plugins/font-awesome_4-7/css/font-awesome.min.css'
        'bundles/backend/plugins/EasyAutocomplete/easy-autocomplete.min.css'
        'bundles/backend/plugins/AlertifyJS/css/alertify.min.css'
        filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="{% block class_body %}{% endblock %}">

{% javascripts 'bundles/backend/plugins/jQuery/jquery-2.2.3.min.js'%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
{#inject variables#}

{% block body %}
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        window.container = window.container || {};
        window.container.flash_bag="{{ path('flash_bag_anon') }}";
    </script>

    {% javascripts
    'bundles/backend/bootstrap/js/bootstrap.min.js'
    'bundles/backend/plugins/AlertifyJS/alertify.min.js'
    'bundles/backend/plugins/EasyAutocomplete/jquery.easy-autocomplete.min.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}
</body>
</html>
