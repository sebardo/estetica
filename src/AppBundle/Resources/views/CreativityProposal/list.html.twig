{% extends "BackendBundle:CRUD:list.html.twig" %}

{% block page_title %}{{ 'creativity_proposal.list.title'|trans() }}{% endblock %}
{% block page_subtitle %}{{ 'creativity_proposal.list.subtitle'|trans() }}{% endblock %}
{% block list_title 'creativity_proposal.list'|trans%}
{% if is_granted("ROLE_ADMIN") %}
    {% block create_action_list %}{% endblock %}
    {#{% block create_new_path path('admin_creativity_proposal_create') %}#}
    {#{% block create_new_title 'creativity_proposal.create_new'|trans %}#}
{% endif %}

{% block list_body %}
    <table id="datatable" class="table table-bordered table-hover dataTable">
        <thead>
        {% block thead %}
            <tr>
                <th>{{ '#' }}</th>
                <th>{{ 'app.list.table.created'|trans|title }}</th>
                <th>{{ 'app.list.table.name'|trans|title }}</th>
                {#<th>{{ 'app.delete'|trans|title }}</th>#}
            </tr>
        {% endblock %}
        </thead>
        <tfoot>
        {{ block('thead') }}
        </tfoot>
        <tbody>
        {% for entity in creativityProposalCollection %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ entity.createdAt|date('d/m/Y') }}</td>
                <td>{{ entity.promotion }}</td>
                {#<td>#}
                    {#{% form_theme deleteFormCollection[entity.id] "BackendBundle:CRUD:delete.html.twig" %}#}
                    {#{{ form(deleteFormCollection[entity.id]) }}#}
                {#</td>#}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}