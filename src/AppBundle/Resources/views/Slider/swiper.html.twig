 {% set items = get_slider_items() %}
<div class="swiper-container">
    <div class="swiper-wrapper">
        {% for item in items %}
            <div class="swiper-slide" style="background-image: url('{{item.image}}');background-repeat: no-repeat;background-position: center;"></div>
        {% endfor %}
    </div>
    <!-- Add Pagination -->
    <div class="swiper-pagination"></div>
    <!-- Add Arrows -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
</div>
