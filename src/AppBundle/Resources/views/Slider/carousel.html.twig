<!-- Half Page Image Background Carousel Header -->
<div id="myCarousel" class="carousel slide">

     <!-- Indicators -->
    {% if items|length > 1%}
    <ol class="carousel-indicators">
        {% for item in items %}
            <li data-target="#myCarousel" data-slide-to="{{loop.index-1}}" class="{% if loop.first %}active{% endif %}"></li>
        {% endfor %}
    </ol>
    {% endif %}
    <!-- Wrapper for Slides -->
    <div class="carousel-inner">
        {% for item in items %}
        <div class="item {% if loop.first %}active{% endif %}">
            <!-- Set the first background image using inline CSS below. -->
            {#% if item.url != '' %}<a {% if item.openInNewWindow %}target="_blank"{% endif %} href="{{item.url}}">{% endif %}
            <div class="fill" style="background-image:url('http://estetica.dev{{item.image}}');"></div>
            {% if item.url != '' %}</a>{% endif %}
            {% if item.title != '' and item.caption != ''%}
                <div class="carousel-caption">
                    <h2>{{item.title | raw }}</h2>
                    <p>{{item.caption | raw }}</p>
                    <div class="link">
                        <a style="display: none" class="btn-core" href="{{ item.url }}">Ver mas</a>
                    </div>
                </div>
            {% endif%#}
            <img width="100%" src="http://estetica.dev/{{item.image}}" alt="Los Angeles">
        </div>
        {% endfor %}
    </div>

    <!-- Controls -->    
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>

</div>